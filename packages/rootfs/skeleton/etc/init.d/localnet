#!/bin/sh
################################################################
# Begin $rc_base/init.d/
#
# Description : 
# 
# Authors     :
# 
# Version     : 00.00
#
# Notes       :
#
###############################################################

. /etc/default/rc
. ${rc_functions}

if [ -e /etc/hostname ]; then
HOSTNAME=$(cat /etc/hostname)
else
HOSTNAME="default"
fi

case "$1" in
  start)
 	boot_msg "Setting hostname to ${HOSTNAME}."
	hostname ${HOSTNAME}
	evaluate_retval
	;;
  *)
	echo "Usage: $0 {start}"
	exit 1
esac

exit $?

